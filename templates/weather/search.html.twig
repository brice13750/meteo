{% extends 'base.html.twig' %}

{% block title %}
    
{% endblock %}

{% block body %}

<h1 class="text-center py-3">Rechercher la Méteo de votre ville</h1>

<div class="container">
<div class="col-12 col-md-6 mx-auto">
    {{form_start(form)}}
    {{form_row(form.city)}}
    <button class="btn btn-primary">Soumettre</button>
    {{form_end(form)}}
</div>

{% if app.request.method == 'POST' %}
    <div class="result text-center">
    <p class="font-weight-bold">Température : {{ json.0.main.temp }} °C</p>
    <p class="font-weight-bold">Température ressentie : {{ json.0.main.feels_like }} °C</p>
    <p class="font-weight-bold">Température Min : {{ json.0.main.temp_min }} °C</p>
    <p class="font-weight-bold">Température Max : {{ json.0.main.temp_max }} °C</p>
    </div>
{% endif %}

</div>




{% endblock %}
